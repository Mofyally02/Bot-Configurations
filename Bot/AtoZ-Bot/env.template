# AtoZ Bot Dashboard Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=atoz_bot_db
POSTGRES_USER=atoz_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://atoz_user:your_secure_password_here@localhost:5432/atoz_bot_db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# ATOZ BOT CREDENTIALS
# =============================================================================
ATOZ_BASE_URL=https://portal.atozinterpreting.com
ATOZ_USERNAME=your_email@example.com
ATOZ_PASSWORD=your_secure_password
ATOZ_INTERPRETER_JOBS_PATH=/interpreter-jobs

# =============================================================================
# BOT CONFIGURATION
# =============================================================================
# Main bot refresh interval (seconds)
REFRESH_INTERVAL_SEC=0.5

# Quick check configuration
QUICK_CHECK_INTERVAL_SEC=10
ENABLE_QUICK_CHECK=false

# Results reporting configuration
RESULTS_REPORT_INTERVAL_SEC=5
ENABLE_RESULTS_REPORTING=true

# Rejected jobs reporting configuration
REJECTED_REPORT_INTERVAL_SEC=43200
ENABLE_REJECTED_REPORTING=true

# Bot behavior
MAX_ACCEPT_PER_RUN=5
HEADLESS=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=development

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:8000
NODE_ENV=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret for API authentication (generate a secure random string)
JWT_SECRET_KEY=your_jwt_secret_key_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log file paths
LOG_FILE_PATH=./logs/app.log
BOT_LOG_FILE_PATH=./logs/bot.log

# Enable debug mode
DEBUG=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# SSL Configuration (for production)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Domain configuration
DOMAIN=localhost
PRODUCTION_DOMAIN=your-domain.com

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker network configuration
DOCKER_NETWORK=atoz-network

# Volume paths
POSTGRES_DATA_PATH=./data/postgres
REDIS_DATA_PATH=./data/redis
LOGS_PATH=./logs

# =============================================================================
# NOTIFICATION CONFIGURATION (Optional)
# =============================================================================
# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Webhook notifications
WEBHOOK_URL=
WEBHOOK_SECRET=

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
# Analytics retention period (days)
ANALYTICS_RETENTION_DAYS=7

# Data cleanup interval (hours)
CLEANUP_INTERVAL_HOURS=24

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Worker processes for production
WORKER_PROCESSES=4

# Database connection pool size
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis connection pool size
REDIS_POOL_SIZE=10

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable hot reload
HOT_RELOAD=true

# Enable debug toolbar
DEBUG_TOOLBAR=false

# Enable API documentation
ENABLE_DOCS=true

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================
# Database backup configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
# Health check intervals (seconds)
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Bot rate limiting
BOT_RATE_LIMIT_REQUESTS=10
BOT_RATE_LIMIT_WINDOW=60

